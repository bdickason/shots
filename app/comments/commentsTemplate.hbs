    <label><h3>{{ this.length }} {{pluralize this.length 'Comment' 'Comments'}}</h3></label>
    <textarea id="text" type="text" class="comment" placeholder="Enter your comment" /><br />
    <button id="createComment">save</button>
    <ul class="comments">
        {{#each this}}
            <li id="{{ id }}" class="comment">
                Posted {{ time }} by {{ user }}<br />
                <p id="text">{{ text }}</p>
                <p><a href="#" id="editComment" data-id="{{ id }}">edit</a> <a href="#" id="cancelEdit" style="display: none" data-id="{{ id }}">cancel</a> <a href="#" id="deleteComment" data-id="{{ id }}">delete</a></p>
            </li>
        {{/each}}
    </ul>